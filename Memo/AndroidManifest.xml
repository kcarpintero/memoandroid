<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.esmertec.memo">

	<uses-permission id="android.permission.READ_CONTACTS" />

	<application android:icon="@drawable/icon">

		<provider class=".provider.MemoProvider"
			android:authorities="com.esmertec.memo" />

		<activity class=".activity.MemoList"
			android:label="@string/app_name">
			<intent-filter>
				<action android:value="android.intent.action.MAIN" />
				<category
					android:value="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:value="android.intent.action.VIEW" />
				<action android:value="android.intent.action.EDIT" />
				<action android:value="android.intent.action.PICK" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<type android:value="vnd.esmertec.cursor.dir/memo" />
			</intent-filter>
			<intent-filter>
				<action
					android:value="android.intent.action.GET_CONTENT" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<type android:value="vnd.esmertec.cursor.item/memo" />
			</intent-filter>
		</activity>

		<activity class=".activity.MemoEditor"
			android:label="@string/title_memo_editor">
			<intent-filter
				android:label="@string/label_memo_edit_intent">
				<action android:value="android.intent.action.VIEW" />
				<action android:value="android.intent.action.EDIT" />
				<action
					android:value="com.esmertec.memos.action.EDIT_MEMO" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<category
					android:value="android.intent.category.SELECTED_ALTERNATIVE" />
				<type android:value="vnd.esmertec.cursor.item/memo" />
			</intent-filter>
			<intent-filter>
				<action android:value="android.intent.action.INSERT" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<type android:value="vnd.esmertec.cursor.dir/memo" />
			</intent-filter>
		</activity>

		<activity class=".activity.MapBrowser">
			<intent-filter android:label="Set Location">
				<action
					android:value="com.esmertec.memos.action.SET_LOCATION" />
				<action
					android:value="com.esmertec.memos.action.VIEW_LOCATION" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<category
					android:value="android.intent.category.SELECTED_ALTERNATIVE" />
				<type android:value="vnd.esmertec.cursor.item/memo" />
			</intent-filter>
		</activity>
		
		<activity class=".activity.SaveLocation"
			android:label="@string/title_save_location"
			android:theme="@android:style/Theme.Dialog" />

		<activity class=".activity.AutoCompleteInputDialog"
			android:theme="@android:style/Theme.Dialog" />
		<activity class=".activity.TimeSetter"
			android:label="Set the time"
			android:theme="@android:style/Theme.Dialog">
			<intent-filter android:label="Set time">
				<action
					android:value="com.esmertec.memos.action.SET_TIME" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<category
					android:value="android.intent.category.SELECTED_ALTERNATIVE" />
				<type android:value="vnd.esmertec.cursor.item/memo" />
			</intent-filter>
		</activity>
		<activity class=".activity.ContactEditor"
			android:label="Edit the contacts"
			android:theme="@android:style/Theme.Dialog">
			<intent-filter android:label="Edit Contacts">
				<action
					android:value="com.esmertec.memos.action.EDIT_CONTACTS" />
				<category
					android:value="android.intent.category.DEFAULT" />
				<category
					android:value="android.intent.category.SELECTED_ALTERNATIVE" />
				<type android:value="vnd.esmertec.cursor.item/memo" />
			</intent-filter>
		</activity>


	</application>
</manifest>
