<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esmertec.memo">

                
    <application android:icon="@drawable/icon">
    
        <provider class="MemoProvider"
                android:authorities="com.esmertec.provider.Memo" />
    
        <activity class="MemoList" android:label="@string/app_name">
            <intent-filter>
                <action android:value="android.intent.action.MAIN" />
                <category android:value="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:value="android.intent.action.VIEW" />
                <action android:value="android.intent.action.EDIT" />
                <action android:value="android.intent.action.PICK" />
                <category android:value="android.intent.category.DEFAULT" />
                <type android:value="vnd.esmertec.cursor.dir/memo" />
            </intent-filter>
            <intent-filter>
                <action android:value="android.intent.action.GET_CONTENT" />
                <category android:value="android.intent.category.DEFAULT" />
                <type android:value="vnd.esmertec.cursor.item/memo" />
            </intent-filter>
        </activity>
        
        <activity class="MemoEdit" android:label="@string/title_memo_edit">
            <intent-filter android:label="@string/resolve_memo_edit">
                <action android:value="android.intent.action.VIEW" />
                <action android:value="android.intent.action.EDIT" />
                <action android:value="com.esmertec.memos.action.EDIT_MEMO" />
                <category android:value="android.intent.category.DEFAULT" />
                <type android:value="vnd.esmertec.cursor.item/memo" />
            </intent-filter>
            <intent-filter>
                <action android:value="android.intent.action.INSERT" />
                <category android:value="android.intent.category.DEFAULT" />
                <type android:value="vnd.esmertec.cursor.dir/memo" />
            </intent-filter>
        </activity>
        

    </application>
</manifest> 